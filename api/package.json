{
  "name": "government-ai-api",
  "version": "1.0.0",
  "description": "API service for Government AI Prototype with persistent instruction layering",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:security": "jest __tests__/security.test.js --verbose --detectOpenHandles --forceExit",
    "test:security:watch": "jest __tests__/security.test.js --watch --verbose --detectOpenHandles --forceExit",
    "test:security:coverage": "jest __tests__/security.test.js --coverage --verbose --detectOpenHandles --forceExit",
    "security:audit": "npm audit && npm run test:security",
    "security:full": "npm audit && npm run test:security:coverage"
  },
  "keywords": [
    "ai",
    "government",
    "ollama",
    "instruction-layering",
    "personas"
  ],
  "author": "Mark Headd",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "openai": "^5.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.3.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": false
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
