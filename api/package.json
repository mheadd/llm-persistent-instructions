{
  "name": "government-ai-api",
  "version": "1.0.0",
  "description": "API service for Government AI Prototype with persistent instruction layering",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "ai",
    "government",
    "ollama",
    "instruction-layering",
    "personas"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "openai": "^5.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.3.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.js"
    ],
    "globalTeardown": "<rootDir>/__tests__/teardown.js",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "forceExit": true,
    "detectOpenHandles": false
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
